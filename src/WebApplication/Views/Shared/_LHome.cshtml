        </footer>
    </div>

    <script src="~/Assets/plugins/jquery/jquery.min.js"></script>
    <script src="~/Assets/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Assets/dist/js/adminlte.min.js"></script>
    <script src="~/Assets/plugins/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/Assets/plugins/toastr/toastr.min.js"></script>
    <script src="~/Assets/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>
    <script>
        $(document).ready(function () {

        
            bsCustomFileInput.init();

            var errorMessage = '@errorMessage';
            if (errorMessage)
                toastr.error(errorMessage);

            var successMessage = '@successMessage';
            if (successMessage)
                toastr.success(successMessage);

            $('.nav.nav-pills.nav-sidebar.flex-column').find('[href="' + window.location.pathname.replace('/Index','') + '"]').addClass('active');
            $('.nav.nav-pills.nav-sidebar.flex-column').find('[href="' + window.location.pathname.replace(/\/$/, "").replace('/Index','') + '"]').addClass('active');
            $('.nav.nav-pills.nav-sidebar.flex-column').find('[href="' + window.location.pathname.replace(/\/$/, "").replace('/Index','') + '"]').parent().parent().parent().addClass('menu-open');
            $('.nav.nav-pills.nav-sidebar.flex-column').find('[href="' + window.location.pathname.replace(/\/$/, "").replace('/Index','') + '"]').parent().parent().parent().parent().parent().addClass('menu-open');
        });
    </script>
    @RenderSection("Scripts", required: false)
